<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asus.go_paradmin">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".GoParAdmin"
        android:allowBackup="true"
        android:icon="@drawable/owl"
        android:label="@string/app_name"
        android:roundIcon="@drawable/owl"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.tips.AddTipsActivity" />
        <activity android:name=".ui.detailtips.DetailTipsActivity" />
        <activity android:name=".ui.detailreminder.DetailReminderActivity" />
        <activity android:name=".ui.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.settings.SettingsActivity" />
        <activity android:name=".ui.addreminder.AddReminderActivity"></activity>
    </application>

</manifest>